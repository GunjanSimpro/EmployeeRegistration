@model ERM.Core.Model.Login
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Login.cshtml";
}

 
    
    <section id="wrapper" class="login-register login-sidebar" style="background-image:url(../Style/Images/login-bg.jpg);">
        <div class="login-box card">
            <div class="card-body">
@using (Html.BeginForm("Index", "Login", FormMethod.Post, new { @id = "form-login" }))
{
    @Html.AntiForgeryToken()

                <div class="form-horizontal form-material" id="loginform">
                    <a href="Login.aspx" class="text-center db">
                        <img src="../Style/Images/logo.png" style="width:35%" />
                    </a>
                    <span class="text-success" id="message" style="display:none">@TempData["SuccessMessage"]</span>
                    <div class="form-group m-t-20">
                        <div class="col-xs-12">
                            @*<input class="form-control" type="text" required="" placeholder="Username" />*@
                            @Html.TextBoxFor(m=>m.UserName,new {@class= "form-control",@placeholder= "Username" })
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-xs-12">
                            @*<input class="form-control" type="password" required="" placeholder="Password" />*@
                            @Html.TextBoxFor(m => m.UserPassword, new { @class = "form-control", @placeholder = "Password" ,@type="Password"})
                        </div>
                    </div>
                  
                    <div class="form-group text-center m-t-20">
                        <div class="col-xs-12">
                            <button type="submit" class="btn btn-info btn-lg btn-block text-uppercase waves-effect waves-light" id="loginBtn">
                                Log In
                            </button>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-md-12">
                            <a href="@Url.Action("AddUser", "Registration", new { regisId = 0 })" id="to-recover" class="pull-left"><i class="fa fa-lock m-r-5"></i> Registration</a>
                        </div>
                    </div>
                </div>
}

                </div>
        </div>
    </section>
<script src="~/Scripts/jquery-1.12.4.min.js"></script>
<script src="~/Scripts/jquery-ui-1.11.4.min.js"></script>

<script src="~/Scripts/bootstrap-datepicker.min.js"></script>
<script>
    var msg = $('#message').text();
    if (msg != '')

    {
        alert(msg);
    }
    $('#loginBtn').click(function () {
        var userName = $('#UserName').val();
        var pwd = $('#UserPassword').val();
        if(userName=='' ||pwd=='')
        {
            alert('please enter mandatory fields');
            return false;
        }


    })
</script>
