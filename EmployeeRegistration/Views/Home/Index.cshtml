@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/__Layout.cshtml";
}

<div class="card">
    <div class="card-header card-header-text">
        <h4 class="card-title">All Employee Details</h4>
    </div>
   <div class="card-body">
       <div>
           <table id="tbl" class="table table-striped table-bordered" cellspacing="0" width="100%">
               <thead>
                   <tr>

                       <th>
                           First Name
                       </th>
                       <th>
                           Last Name
                       </th>
                       <th>
                           Email Address
                       </th>
                       <th>
