                       </th>
                       <th>
                           Country
                       </th>
                       <th>
                           State
                       </th>
                       <th>
                           Last Login
                       </th>
                   </tr>

               </thead>
               <tbody>
                   @if(Model!=null)
                   {
                       foreach(var item in Model)
                       {
                           <tr>
                               <td>@item.FirstName</td>
                               <td>@item.LastName</td>
                               <td>@item.EmailId</td>
                               <td>@item.MobileNumber</td>
                               <td>@item.PrimaryAddress</td>
                               <td>@item.SecondaryAddress</td>
                               <td>@item.CountryName</td>
                               <td>@item.State</td>
                               <td>@item.LastLogin</td>
                           </tr>
                       }
                   }

